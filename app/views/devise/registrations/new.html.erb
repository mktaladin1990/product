<h2>Sign up devise</h2>
<div class="row">
  <div class="col-lg-offset-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal col-md-10"}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :email , "Email", class: "col-md-2 control-label" %>
      <div class="col-md-6">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name , "Name", class: "col-md-2 control-label" %>
      <div class="col-md-6">
        <%= f.text_field :name, class: "form-control", placeholder: "Enter Username" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password , class: "col-md-2 control-label"%>
      <div class="col-md-6">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>
            characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
      <div class="col-md-6">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Enter password confirmation" %>
      </div>
    </div>

    <div class="form-group ">
      <div class="col-lg-offset-4">
        <%= f.submit "Register", class: "btn btn-success" %>
          <%= render "devise/shared/links" %>
        </div>

    </div>


  <% end %>


</div>
</div>
